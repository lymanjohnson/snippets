

{{#errorMsg}}
<div class="alert alert-danger">
  {{.}}
</div>
{{/errorMsg}}
<div class="container">
  <h2>Add New Snippet</h2>
  <form action="/create/" method="POST">
    <label for="title">Title:</label>
    <pre><input type="text" id="title" name="title" required /></pre>

    <label for="body">Body:</label>
    <pre><textarea cols="200" rows="30" id="body" name="body"> </textarea></pre>

    <label for="notes">Notes:</label>
    <pre><input type="text" id="notes" name="notes" /></pre>

    <label for="language">Language:</label>
    <pre><input type="text" id="language" name="language" /></pre>

    <label for="tagsRaw">Tags:</label>
    <pre><input type="text" id="tagsRaw" name="tagsRaw"/></pre>

    <button type="submit">Add Snippet</button>
</form>
</div>
